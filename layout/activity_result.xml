<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="horizontal">

        <View
            android:layout_width="500px"
            android:layout_height="230px"
            android:layout_gravity="left"
            android:background="#000000"
            android:foregroundGravity="left" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="400px"
            android:layout_height="220px"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="center"
            android:text="예측 결과"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="650px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="420px"
                android:layout_height="520px"
                android:background="#000000"
                app:srcCompat="@drawable/mushroom" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#000000"
                android:text="촬영한 사진"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150px"
            android:layout_height="650px"
            android:background="#000000"
            android:gravity="center"
            android:text="▶"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="520px"
                android:layout_height="460px"
                android:layout_weight="1"
                android:background="#000000"
                app:srcCompat="@drawable/mushroomm" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000000"
                android:gravity="bottom"
                android:text="녹각영지버섯 82%"
                android:textColor="#FFD600"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000000"
                android:gravity="top"
                android:text="붉은사슴뿔버섯 18%"
                android:textColor="#FFD600"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="center_vertical"
        android:text="비슷한 모양의 독버섯 : 붉은사슴뿔버섯"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300px"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="500px"
            android:layout_height="400px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#000000"
            app:srcCompat="@drawable/poison" />

        <View
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="left"
            android:background="#000000"
            android:foregroundGravity="left" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#000000"
            app:srcCompat="@drawable/poisonn" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_gravity="fill_vertical"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="bottom"
        android:text="주름버섯 목 독청버섯과의 한 종으로, 파시큐롤 등의  독이 포함된 맹독성 버섯이다."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_weight="1"
        android:background="#000000"
        android:text="응급 상황 시."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_weight="1"
        android:background="#000000"
        android:text="119 신고, 토하기, 섭취한 독버섯 가지고 병원 가기 "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_weight="1"
        android:background="#000000"
        android:text="※ 주의."
        android:textColor="#D50000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_weight="1"
        android:background="#000000"
        android:text="100% 신용하지 말고 참고만 하세요."
        android:textColor="#D50000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="#000000"
            android:foregroundGravity="left" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="400px"
            android:layout_height="250px"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#000000"
            android:foregroundGravity="top"
            app:srcCompat="@drawable/buttonbw" />
    </LinearLayout>

</LinearLayout>